#include <stdio.h>

void float_bits(int *num)
{
    for(int i =31; i>=0;i--)
    {
        if(i==22 || i == 30)
        {
            printf(" \t");.
            
        }
        int bits = *num >> i;
        if((bits&1) == 1)
        {
            printf("1");
        }
        else
        {
            printf("0");
        }
    }
    printf("\n");
}
int main()
{
    //printf("Hello World");
    printf("enter a float number\n");
    float float_num;
    scanf("%f",&float_num);
    float_bits((int*)float_num);
    return 0;
}
